<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
    

           
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/colorWhite"
    android:orientation="vertical" android:tag="layout/activity_delivery_address_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/Imgview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="19dp"
                android:layout_marginLeft="@dimen/_23sdp"
                android:clickable="true"
                android:onClick="deliveryAddress"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back_arrow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/tv_changepassword"
                android:text="+Add New"
                android:background="@drawable/rounded_border"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:clickable="true"
                android:onClick="addNew"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:backgroundTint="@color/colorOrange"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/delAddrecyclerview"/>

    </LinearLayout>
         