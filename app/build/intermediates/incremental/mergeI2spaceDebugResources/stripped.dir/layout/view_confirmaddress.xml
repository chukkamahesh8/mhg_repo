<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorblack_68"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to leave ?"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="any changes you made on the address form will be lost "
            android:textColor="@color/colorwarm_grey"
            android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/segment_layout_bg"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_90sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Leave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/selected_button_state"
                android:text="Leave"
                android:onClick="leave"
                android:textColor="@color/colorBlack"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_Stay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/bg_orangeborder"
                android:text="Stay"
                android:backgroundTint="@color/bright_orange"
                android:onClick="stay"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/_5sdp"
                android:textSize="13sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>