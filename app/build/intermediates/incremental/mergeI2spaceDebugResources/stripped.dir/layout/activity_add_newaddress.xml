<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/activity_add_newaddress_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgAddressBackArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_back_arrow" />

                <TextView
                    android:id="@+id/tv_changepassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Add New Address"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_location"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rect_peach"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Imglocation"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_location" />


                <TextView
                    android:id="@+id/edtxtUsemycurrentlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/colorlight_peach"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:inputType="textPostalAddress"
                    android:text="@string/med_HintUsemycurrentlocation"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />
            </LinearLayout>


            <EditText
                android:id="@+id/edtxtaddressline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/colorOrange"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/med_addressline1"
                android:imeOptions="actionNext"
                android:maxLines="2"
                android:inputType="text"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/edtxtApartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/colorOrange"
                android:fontFamily="@font/poppins_medium"
                android:hint="Apartment / Suite"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorOrange"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="City*"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ed_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorOrange"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="State*"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtxtZipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/colorOrange"
                android:fontFamily="@font/poppins_medium"
                android:hint="Zipcode"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtxtLandmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/colorOrange"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/ed_Hintlandmark"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtxtAlternatePhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/colorOrange"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/ed_Hintalternatenumber"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Tag this Location as"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="88dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_box"
                    android:backgroundTint="@color/bright_orange"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:text="Home"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnOffice"
                    android:layout_width="88dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/rectangle_box"
                    android:backgroundTint="@color/colorlight_peach"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:text="Work"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnothers"
                    android:layout_width="88dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/rectangle_box"
                    android:backgroundTint="@color/colorlight_peach"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:text="Other"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15sp" />


            </LinearLayout>

            <Button
                android:id="@+id/btnSaveAddress"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/rounded_border"
                android:backgroundTint="@color/bright_orange"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Save Address"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
         