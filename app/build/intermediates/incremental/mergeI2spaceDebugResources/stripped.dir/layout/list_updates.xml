<?xml version="1.0" encoding="utf-8"?>
        
    

           
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:tag="layout/list_updates_0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_7sdp"
        android:outlineSpotShadowColor="@color/colorOrange"
        android:layout_marginTop="@dimen/_7sdp"
        app:cardElevation="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Processing"
        android:id="@+id/offertitle"
        android:textSize="15sp"
        android:textColor="@color/bright_orange"
        android:fontFamily="@font/poppins_semibold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offerDescription"
        android:textSize="15sp"
        android:text="Your order has been accepted with 10 products."
        android:textColor="@color/colorwarm_grey"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/poppins_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offertime"
        android:textSize="10sp"
        android:text="2nd May 2020"
        android:layout_gravity="end"
        android:gravity="end"
        android:textColor="@color/colorgreyish_brown_two"
        android:fontFamily="@font/poppins_light"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_7sdp"
        android:outlineSpotShadowColor="@color/colorOrange"
        app:cardElevation="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Accepted"
                android:id="@+id/acceptedtitle"
                android:textSize="15sp"
                android:textColor="@color/bright_orange"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acceptedDescription"
                android:textSize="15sp"
                android:text="Your order has been Processing with 10 products."
                android:textColor="@color/colorwarm_grey"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acceptedtime"
                android:textSize="10sp"
                android:text="20th May 2020"
                android:layout_gravity="end"
                android:gravity="end"
                android:textColor="@color/colorgreyish_brown_two"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_7sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:id="@+id/deliveredtitle"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deliveredDescription"
            android:textSize="15sp"
            android:text="Your order has been Delivered with 10 products."
            android:textColor="@color/colorwarm_grey"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Deliveredtime"
            android:textSize="10sp"
            android:text="13th May 2020"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="@color/colorgreyish_brown_two"
            android:fontFamily="@font/poppins_light"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:backgroundTint="@color/colorlight_peach"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Reorder"
                android:includeFontPadding="false"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:text="Rate Your Order"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:includeFontPadding="false"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorwarm_grey"
        android:layout_marginTop="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:id="@+id/ratingtitle"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingDescription"
            android:textSize="15sp"
            android:text="Your order has been Delivered with 10 products."
            android:textColor="@color/colorwarm_grey"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingtime"
            android:textSize="10sp"
            android:text="24th May 2020"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="@color/colorgreyish_brown_two"
            android:fontFamily="@font/poppins_light"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="@dimen/_120sdp"
              android:layout_height="wrap_content"
                android:text="Reorder"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15sp"
                android:includeFontPadding="false"
                android:layout_marginRight="@dimen/_10sdp"
                android:backgroundTint="@color/colorlight_peach"
                android:textColor="@color/colorBlack"/>
            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorwarm_grey"
            android:layout_marginTop="@dimen/_3sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:id="@+id/addresstitle"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressDescription"
            android:textSize="15sp"
            android:text="Delivering to Delivery area, with flat name, pin code, city etc.,"
            android:textColor="@color/colorwarm_grey"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
         