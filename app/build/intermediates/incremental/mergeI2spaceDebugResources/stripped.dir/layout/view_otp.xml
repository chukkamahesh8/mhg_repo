<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical" android:tag="layout/view_otp_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otpFirst"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/oval"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:focusable="true"
                android:focusedByDefault="true"
                android:lines="1"
                android:maxLength="1"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/otpSecond"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/oval"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/otpThird"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/oval"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/otpFour"
                android:layout_width="49dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/oval"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/otpFive"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/oval"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/otpSix"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/oval"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />


        </LinearLayout>


            <TextView
                android:id="@+id/txtResendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:clickable="true"
                android:fontFamily="@font/poppins_medium"
                android:gravity="end"
                android:text="@string/mtv_ResendOtp"
                android:textColor="@color/bright_orange"
                android:textSize="@dimen/Resend_otp" />


    </LinearLayout>

    

           
         