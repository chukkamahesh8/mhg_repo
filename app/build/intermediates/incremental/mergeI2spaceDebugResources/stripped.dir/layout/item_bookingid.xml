<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/card_passenger"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_pnrno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PNR NO : 123456789"
                android:textColor="#707070"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seat No : 15"
                android:gravity="end"
                android:textSize="@dimen/_12sdp"/>
        </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="#707070"
             android:layout_marginHorizontal="@dimen/_15sdp"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_10sdp">
         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginHorizontal="@dimen/_15sdp">

        <TextView
            android:id="@+id/boarding_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boarding Point"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Mumbai"
             android:id="@+id/boarding_city"
             android:layout_below="@id/boarding_point"
             android:textSize="@dimen/_14sdp"
             android:textColor="#707070"
             android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:10 AM,Monday 15 Jan"
                android:layout_below="@id/boarding_city"
                android:textSize="@dimen/_10sdp"
                android:textColor="#707070"
                android:fontFamily="@font/poppins_regular"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:id="@+id/departure_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departure Point"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorBlack"
                android:gravity="end"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mumbai"
                android:id="@+id/departure_city"
                android:layout_below="@id/departure_point"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:gravity="end"
                android:textColor="#707070"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:10 AM,Monday 16 Jan"
                android:layout_below="@id/departure_city"
                android:textSize="@dimen/_10sdp"
                android:gravity="end"
                android:layout_centerInParent="true"
                android:textColor="#707070"
                android:fontFamily="@font/poppins_regular"/>
        </RelativeLayout>
     </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="#707070"
             android:layout_marginHorizontal="@dimen/_15sdp"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_10sdp">

         <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
             android:layout_marginBottom="@dimen/_10sdp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="VRL Travels"
              android:textColor="@color/colorBlack"
              android:id="@+id/vrltravels"
              android:layout_marginHorizontal="@dimen/_20sdp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Bus No: 2345"
              android:textColor="#707070"
              android:id="@+id/busno"
              android:fontFamily="@font/poppins_regular"
              android:layout_below="@id/vrltravels"
              android:layout_marginHorizontal="@dimen/_20sdp"/>
      </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="end">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Booking Status"
                 android:textColor="#707070"
                 android:id="@+id/bookingstatus"
                 android:layout_marginHorizontal="@dimen/_20sdp"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="CONFIRMED"
                 android:textColor="#83CF2C"
                 android:id="@+id/confirmed"
                 android:fontFamily="@font/poppins_regular"
                 android:layout_below="@id/bookingstatus"
                 android:layout_marginHorizontal="@dimen/_20sdp"/>
         </RelativeLayout>

         </LinearLayout>


     </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_details"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@+id/card_passenger">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasanger Details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#707070"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Alex Gender"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_centerInParent="true"
                android:text="Male" />

         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="25 Years" />
        </RelativeLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/card_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasanger Detsils"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cancellation Policy"
                android:gravity="end"
                android:textColor="#707070"
                android:textSize="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
         </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#707070"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base Fare"
                    android:textColor="#707070"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs.300"
                    android:textColor="#707070"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="end"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taxes and Fee"
                    android:textColor="#707070"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs.100"
                    android:textColor="#707070"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="end"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#707070"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount Paid"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs 400"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="end"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>






</RelativeLayout>