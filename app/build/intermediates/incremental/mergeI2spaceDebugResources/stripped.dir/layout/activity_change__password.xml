<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_28sdp"
        android:layout_marginRight="@dimen/_67sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/Imgview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:onClick="changePasswordArrow"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_changepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="@dimen/_30sdp"
            android:text="Change Password"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Logintextsize" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_30sdp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtxtCurrentPassword"
            android:hint="@string/med_CurrentPassword"
            android:textSize="@dimen/Logintextsize"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/colorOrange"
            android:imeOptions="actionNext"
            android:textColor="@color/colorBlack"
            android:inputType="textPassword"
           />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtxtNewPassword"
            android:hint="@string/med_NewPassword"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/Logintextsize"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:backgroundTint="@color/colorOrange"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtxtConfirmNewPassword"
            android:hint="@string/medTxtConfirmNewPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/Logintextsize"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:backgroundTint="@color/colorOrange"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/colorgray"
            android:id="@+id/txtPasswordmustcontain"
            android:text="@string/mTxtPasswordmustcontain"
            android:layout_marginTop="@dimen/_29sdp"
            android:fontFamily="@font/poppins_bold" />
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAtleast1uppercaseletter"
            android:text="@string/mTxtAtleast1uppercaseletter"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorgray"
            android:textSize="11sp"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAtleast1number"
            android:text="@string/mTxtAtleast1number"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorgray"
            android:textSize="11sp"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAtleast8characters"
            android:text="@string/mTxtAtleast8characters"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorgray"
            android:textSize="11sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnUpdatePassword"
            android:text="@string/mbtnUpdatePassword"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:layout_margin="21dp"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_22sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/bright_orange" />
    </LinearLayout>
</LinearLayout>
