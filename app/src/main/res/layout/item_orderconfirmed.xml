<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

    <include
        android:id="@+id/view_orderPlaced"
        layout="@layout/view_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/txt_orderplaced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Order has been placed successfully !"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorvibrant_green"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/btn_notnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Track Your Order"
            android:textAllCaps="false"
            android:textColor="@color/bright_orange"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txt_ContinueShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/bright_orange"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="ContinueShopping"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/Logintextsize" />



    </LinearLayout>

</LinearLayout>