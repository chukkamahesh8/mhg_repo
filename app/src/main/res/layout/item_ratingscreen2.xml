<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate Your Experience"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="19sp"
        android:textColor="@color/colorblack_five"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help us improve!"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/colorwarm_grey_three"
        android:textSize="14sp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sademoji"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VERY BAD"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/colorwarm_grey_three"
        android:textSize="30sp"
        android:gravity="center"/>

    <include
        android:id="@+id/view_ratingstar_layout"
        layout="@layout/view_ratingstar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What went wrong?"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/colorwarm_grey_three"
            android:fontFamily="@font/poppins_semibold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>