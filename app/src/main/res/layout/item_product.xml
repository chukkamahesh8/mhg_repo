<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            android:elevation="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="end"
                    android:background="@drawable/oval"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="20%"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_circle_ringl">

                    <ImageView
                        android:id="@+id/im_product"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_product" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Product Name here"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="A product description lines if available. not a bad right."
                    android:textColor="@color/colorgray1"
                    android:textSize="7sp" />

                <TextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="2.5KG - Pouch"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp" />

                <RatingBar
                    android:id="@+id/rb_product_ratting"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="$ XX.XX"
                    android:textColor="@color/bright_orange"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_circle_ringl"
                        android:backgroundTint="@color/colorPrimary">

                        <ImageView
                            android:id="@+id/im_share"
                            android:layout_width="@dimen/_11sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_share" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/ic_circle_ringl"
                        android:backgroundTint="@color/colorPrimary">

                        <ImageView
                            android:id="@+id/im_fav"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_wish_list" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_goto_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:backgroundTint="#ffe0cf"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Go to Cart"
                        android:textColor="@color/bright_orange"
                        android:textSize="8sp" />
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
