<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_screen_4"/>

        <TextView
            android:id="@+id/tv_explore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENJOY"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/tv_deliveryavailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get it Delivered at your Doorstep"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_below="@+id/tv_explore"
            android:fontFamily="@font/poppins_medium"/>

        <ImageView
            android:id="@+id/img_splashscreen1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_screen_4_vector"
            android:layout_below="@+id/tv_deliveryavailability"
            android:layout_marginTop="@dimen/_100sdp"/>



    </RelativeLayout>





</LinearLayout>