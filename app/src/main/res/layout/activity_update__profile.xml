<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Imgview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:clickable="true"
            android:onClick="profileNavigation"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_updateprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="@dimen/_30sdp"
            android:text="Update Profile"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_changePassword"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/bright_orange"
            android:clickable="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:onClick="changePassword"
            android:text="@string/mBtn_ChangePassword"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />
    </RelativeLayout>


    <include
        layout="@layout/view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_50sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:backgroundTint="@color/colorOrange"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/mTv_HintFirstName"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Logintextsize" />

        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:backgroundTint="@color/colorOrange"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/mTv_HintLastName"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Logintextsize" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:backgroundTint="@color/colorOrange"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/mtv_HintEmail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Logintextsize" />

        <EditText
            android:id="@+id/txtTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:backgroundTint="@color/colorOrange"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/mTv_Hintmoiblenumber"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Logintextsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_notnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="@string/mBtn_Notnow"
            android:textAllCaps="false"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/Logintextsize" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/bright_orange"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="@string/mBtn_Update"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/Logintextsize" />
    </LinearLayout>

</LinearLayout>

