<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardElevation="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Arrivals"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/bright_orange"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end"
                        android:background="@drawable/oval"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="20%"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_circle_ringl">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_24sdp"
                        android:src="@drawable/ic_product" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Product Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="A product description described in few lines if available. not a bad right."
                    android:textColor="@color/colorgray1"
                    android:textSize="7sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="2.5KG - Pouch"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="$ XX.XX"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_circle_ringl"
                        android:backgroundTint="@color/colorPrimary">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_share" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/ic_circle_ringl"
                        android:backgroundTint="@color/colorPrimary">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_wish_list" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvminus"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_border"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start|center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="-"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/tvcount"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="-18dp"
                            android:layout_toRightOf="@id/tvminus"
                            android:layout_weight="1"
                            android:padding="@dimen/_2sdp"
                            android:background="@drawable/rounded_border"
                            android:backgroundTint="@color/bright_orange"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="-15dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toRightOf="@id/tvcount"
                            android:background="@drawable/rounded_border"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text=" +"
                            android:textColor="@color/bright_orange"
                            android:textSize="@dimen/_12sdp"
                            />

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>