<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_15sdp"/>
                    <padding android:top="@dimen/_6sdp"
                        android:left="@dimen/_8sdp"
                        android:bottom="@dimen/_6sdp"/>
                </shape>
            </item>
            <item android:bottom="@dimen/_1sdp"
                android:left="@dimen/_1sdp"
                android:top="@dimen/_1sdp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryDark" />
                    <corners android:radius="@dimen/_15sdp"  />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_15sdp"/>
                    <padding android:top="@dimen/_6sdp"
                        android:left="@dimen/_8sdp"
                        android:bottom="@dimen/_6sdp"/>
                </shape>
            </item>
            <item android:bottom="@dimen/_1sdp" android:left="@dimen/_1sdp" android:top="@dimen/_1sdp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/transparent" />
                    <corners android:radius="@dimen/_15sdp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>